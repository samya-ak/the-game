# GraphQL schema example
#
# https://gqlgen.com/getting-started/
type User {
 id: ID!
 name: String!
 gameState: GameState
}

type Query {
 users: [User!]!
}

type GameState {
	id: ID!
	gamesPlayed: Int
	score: Int
	userId: ID!
	user: User
}

input NewUser {
#  userId: String!
 name: String!
}

input UserGameState {
	userId: ID!
	gamesPlayed: Int
	score: Int
}

type Mutation {
 createUser(input: NewUser!): User!
 updateGameState(input: UserGameState!): GameState!
}
